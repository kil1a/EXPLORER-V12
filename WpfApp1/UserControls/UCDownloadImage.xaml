<UserControl x:Class="WpfApp1.UCDownloadImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid x:Name="CreateFileWindowGrid">
        <Canvas x:Name="CreateFileWindowCanvas" Visibility="Visible" Height="150" Width="300" >
            <Border BorderBrush="Black" BorderThickness="1" Height="150" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Label Content="Введите ссылку на изображение" Canvas.Top="74" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="36" Margin="0,14,0,0"/>
            </Border>
        </Canvas>
        <TextBox BorderBrush="Black" x:Name="NewFileName" Text="" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Canvas.Top="32" Canvas.Left="1"></TextBox>
        
    </Grid>
</UserControl>
